@section Scripts{
    <script src="~/Assets/client/controllers/diplomaProjectRegistration/index.js"></script>
    <script>
        var DiplomaProjectRegistrationController = new DiplomaProjectRegistrationController();
        DiplomaProjectRegistrationController.initialize();
    </script>
}

<div class="page-title">
    <div class="title_left">
        <h3><small>Danh sách đề tài</small></h3>
    </div>
    <div class="title_right">
        <h3></h3>
        <select id="selectorRegistrationTime" class="pull-right"></select>
    </div>
</div>

<div class="clearfix"></div>

<div class="row">
    <div class="col-md-12 col-sm-12 col-xs-12">
        <div class="x_panel">
            <div class="x_content">
                <a href="#" id="btnAssignGrades" style="display: none" class="btn btn-primary btn-sm pull-right"><i class="fa fa-pencil"></i> Chấm điểm</a>
                <table class="table table-bordered">
                    <thead>
                    <tr>
                        <th width="10%">
                            Mã sinh viên
                        </th>
                        <th width="20%" style="text-align: center">
                            Tên sinh viên
                        </th>
                        <th width="15%" style="text-align: center">
                            Điểm hướng dẫn
                        </th>
                        <th width="15%" style="text-align: center">
                            Điểm đánh giá
                        </th>
                        <th width="10%" style="text-align: center">
                            Điểm tổng kết
                        </th>
                        <th width="20%" style="text-align: center">
                            Tên đồ án
                        </th>
                    </tr>
                    </thead>
                    <tbody id="tbl-content"></tbody>
                </table>
            </div>
        </div>
    </div>
</div>
<script id="table-template" type="x-tmpl-mustache">
    <tr>
        <td style="text-align: center">{{StudentId}}</td>
        <td style="text-align: center">{{StudentName}}</td>
        <td style="text-align: center" class="introduced-grades"><input class="introduced-grades-input" style="width:50px; text-align: center" value="{{IntroducedGrades}}" data-rid="{{RegistrationTimeId}}" data-dpid="{{DiplomaProjectId}}" data-sid="{{StudentId}}"/></td>
        <td style="text-align: center" class="reviewed-grades"><input class="reviewed-grades-input" style="width:50px; text-align: center" value="{{ReviewedGrades}}"/></td>
        <td style="text-align: center" class="final-grades">{{FinalGrades}}</td>
        <td style="text-align: center">{{DiplomaProjectName}}</td>
    </tr>
</script>
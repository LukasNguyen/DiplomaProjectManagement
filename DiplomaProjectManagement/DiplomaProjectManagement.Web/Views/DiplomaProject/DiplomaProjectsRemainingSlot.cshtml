@section Scripts{
    <script src="~/Assets/client/controllers/diplomaProject/diplomaProjectsRemainingSlot.js"></script>
    <script>
        var DiplomaProjectController = new DiplomaProjectController();
        DiplomaProjectController.initialize();
    </script>
}

<div class="page-title">
    <div class="title_left">
        <h3><small>Danh sách đề tài được đăng ký nhưng còn chỗ trong đợt</small></h3>
    </div>
    <div class="title_right">
        <div class="col-md-5 col-sm-5 col-xs-12 form-group pull-right top_search">
            <div class="input-group">
                <input type="text" class="form-control" id="txtKeyword" placeholder="Nhập từ khóa...">
                <span class="input-group-btn">
                    <button class="btn btn-default" id="btnDiplomaProjectSearch" type="button">Tìm kiếm</button>
                </span>
            </div>
        </div>
    </div>
</div>

<div class="clearfix"></div>

<div class="row">
    <div class="col-md-12 col-sm-12 col-xs-12">
        <div class="x_panel">
            <div class="x_content">
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>
                                Tên đề tài
                            </th>
                            <th>
                                Giáo viên hướng dẫn
                            </th>
                            <th>
                                Tên sinh viên
                            </th>
                            <th>
                                Email sinh viên
                            </th>
                            <th>
                                Số điện thoại
                            </th>
                        </tr>
                    </thead>
                    <tbody id="tbl-content"></tbody>
                </table>
                <!--Pagination-->
                <div class="row">
                    <div class="col-sm-5">
                        <div class="dataTables_info" id="datatable-checkbox_info" role="status" aria-live="polite">
                            <select id="ddlShowPage">
                                <option value="10" selected="selected">10</option>
                                <option value="20">20</option>
                                <option value="30">30</option>
                                <option value="50">50</option>
                            </select>
                            <span class="item-per-page">
                                bản ghi/trang.
                            </span>
                        </div>
                    </div>
                    <div class="col-sm-7">
                        Tổng số bản ghi: <span><strong id="lblTotalRecords"></strong></span>
                        <div class="dataTables_paginate paging_simple_numbers" id="datatable-checkbox_paginate" style="margin-top: -25px">
                            <ul id="paginationUL"></ul>
                        </div>
                    </div>
                </div>
                <!--Loading Bar-->
                <div class="dv-loading">
                    <div class="col-xs-4"></div>
                    <div class="col-xs-4">
                        <i class="fa fa-refresh fa-4x fa-spin"></i> <label class="label label-primary">Đang tải...</label>
                    </div>
                    <div class="col-xs-4"></div>
                </div>
            </div>
        </div>
    </div>
</div>
<script id="table-template" type="x-tmpl-mustache">
    <tr>
        <td>{{DiplomaProjectName}}</td>
        <td>{{LecturerName}}</td>
        <td>{{StudentName}}</td>
        <td>{{StudentEmail}}</td>
        <td>{{StudentPhone}}</td>
    </tr>
</script>
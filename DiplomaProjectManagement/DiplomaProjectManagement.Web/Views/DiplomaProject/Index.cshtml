@section Scripts{
    <script src="~/Assets/client/controllers/diplomaProject/index.js"></script>
    <script>
        var DiplomaProjectController = new DiplomaProjectController();
        DiplomaProjectController.initialize();
    </script>
}

<div class="page-title">
    <div class="title_left">
        <h3><small>Danh sách đề tài</small></h3>
    </div>
    <div class="title_right">
        <div class="col-md-5 col-sm-5 col-xs-12 form-group pull-right top_search">
            <div class="input-group">
                <input type="text" class="form-control" placeholder="Nhập từ khóa...">
                <span class="input-group-btn">
                    <button class="btn btn-default" id="btnSearch" type="button">Tìm kiếm</button>
                </span>
            </div>
        </div>
    </div>
</div>
<div class="clearfix"></div>
<div class="row">
    <div class="col-md-12 col-sm-12 col-xs-12">
        <div class="x_panel">
            <div class="x_content">
                <table class="table table-bordered">
                    <thead>
                    <tr>
                        <th width="20">
                            Tên đồ án
                        </th>
                        <th width="50%">
                            Mô tả đồ án
                        </th>
                        <th width="15%">
                            Số sinh viên đăng ký
                        </th>
                        <th width="15%"></th>
                    </tr>
                    </thead>
                    <tbody id="tbl-content"></tbody>
                </table>
                <!--Pagination-->
                <div class="row">
                    <div class="col-sm-5">
                        <div class="dataTables_info" id="datatable-checkbox_info" role="status" aria-live="polite">
                            <select id="ddlShowPage">
                                <option value="10" selected="selected">10</option>
                                <option value="20">20</option>
                                <option value="30">30</option>
                                <option value="50">50</option>
                            </select>
                            <span class="item-per-page">
                                bản ghi/trang.
                            </span>
                        </div>
                    </div>
                    <div class="col-sm-7">
                        Tổng số bản ghi: <span><strong id="lblTotalRecords"></strong></span>
                        <div class="dataTables_paginate paging_simple_numbers" id="datatable-checkbox_paginate" style="margin-top: -25px">
                            <ul id="paginationUL"></ul>
                        </div>
                    </div>
                </div>
                <!--Loading Bar-->
                <div class="dv-loading">
                    <div class="col-xs-4"></div>
                    <div class="col-xs-4">
                        <i class="fa fa-refresh fa-4x fa-spin"></i> <label class="label label-primary">Đang tải...</label>
                    </div>
                    <div class="col-xs-4"></div>
                </div>
            </div>
        </div>
    </div>
</div>
<script id="table-template" type="x-tmpl-mustache">
    <tr>
        <td>{{Name}}</td>
        <td>{{Description}}</td>
        <td>{{NumberOfStudentsRegistered}}</td>
        <td scope="row">
            <button class="btn btn-primary btn-sm"><i class="fa fa-pencil"></i></button>
            <button class="btn btn-danger btn-sm"><i class="fa fa-trash"></i></button>
        </td>
    </tr>
</script>
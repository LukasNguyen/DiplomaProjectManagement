@model DiplomaProjectManagement.Common.CustomViewModel.DiplomaProjectDetailViewModel

<div class="page-title">
    <div class="title_left">
    </div>
</div>
<div class="clearfix"></div>
<div class="row">
    <div class="col-md-12 col-sm-12 col-xs-12">
        <div class="x_panel">
            <div class="x_title">
                <h2>Xem thông tin đề tài đăng ký</h2>
                <ul class="nav navbar-right panel_toolbox">
                    <li>
                        <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                    </li>
                    <li>
                        <a class="close-link"><i class="fa fa-close"></i></a>
                    </li>
                </ul>
                <div class="clearfix"></div>
            </div>
            <div class="x_content">
                @if (Model == null)
                {
                    <p>Hiện tại bạn chưa đăng ký đề tài nào để xem chi tiết.</p>
                    <div>
                        @Html.ActionLink("Trở về", "Dashboard", "Home", null, new { @class = "btn btn-sm btn-success" })
                    </div>
                }
                else
                {
                    <div class="form-horizontal">
                        <div class="form-group">
                            @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label col-md-3" })
                            <div class="col-md-9">
                                <p class="form-control-static">@Html.DisplayFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })</p>
                            </div>
                        </div>
                    </div>
                    <div class="form-horizontal">
                        <div class="form-group">
                            @Html.LabelFor(model => model.Description, htmlAttributes: new { @class = "control-label col-md-3" })
                            <div class="col-md-9">
                                <p class="form-control-static">@Html.DisplayFor(model => model.Description, new { htmlAttributes = new { @class = "form-control" } })</p>
                            </div>
                        </div>
                    </div>
                    <div class="form-horizontal">
                        <div class="form-group">
                            @Html.LabelFor(model => model.LecturerName, htmlAttributes: new { @class = "control-label col-md-3" })
                            <div class="col-md-9">
                                <p class="form-control-static">@Html.DisplayFor(model => model.LecturerName, new { htmlAttributes = new { @class = "form-control" } })</p>
                            </div>
                        </div>
                    </div>

                    if (Model.IntroducedGrades == null)
                    {
                        <div class="form-horizontal">
                            <div class="form-group">
                                @Html.LabelFor(model => model.IntroducedGrades, htmlAttributes: new { @class = "control-label col-md-3" })
                                <div class="col-md-9">
                                    <p class="form-control-static">Đang cập nhật</p>
                                </div>
                            </div>
                        </div>
                    }
                    else
                    {
                        <div class="form-horizontal">
                            <div class="form-group">
                                @Html.LabelFor(model => model.IntroducedGrades, htmlAttributes: new { @class = "control-label col-md-3" })
                                <div class="col-md-9">
                                    <p class="form-control-static">@Html.DisplayFor(model => model.IntroducedGrades, new { htmlAttributes = new { @class = "form-control" } })</p>
                                </div>
                            </div>
                        </div>
                    }

                    if (Model.ReviewedGrades == null)
                    {
                        <div class="form-horizontal">
                            <div class="form-group">
                                @Html.LabelFor(model => model.ReviewedGrades, htmlAttributes: new { @class = "control-label col-md-3" })
                                <div class="col-md-9">
                                    <p class="form-control-static">Đang cập nhật</p>
                                </div>
                            </div>
                        </div>
                    }
                    else
                    {
                        <div class="form-horizontal">
                            <div class="form-group">
                                @Html.LabelFor(model => model.ReviewedGrades, htmlAttributes: new { @class = "control-label col-md-3" })
                                <div class="col-md-9">
                                    <p class="form-control-static">@Html.DisplayFor(model => model.ReviewedGrades, new { htmlAttributes = new { @class = "form-control" } })</p>
                                </div>
                            </div>
                        </div>
                    }
                    <div>
                        @Html.ActionLink("Trở về", "Dashboard", "Home", null, new { @class = "btn btn-success" })
                    </div>
                }
            </div>
        </div>
    </div>
</div>